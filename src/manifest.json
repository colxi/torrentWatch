{
	"version": "0.0.3302",
	"manifest_version": 2,
	"name": "Torrent Watch : Alerts on torrent releases",
	"description": "This extension alerts user when torrent file is released",
	"default_locale": "en",
	"background": {
		"scripts": [
			"scripts/background.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"19": "img/icon_19.png",
			"38": "img/icon_38.png"
		},
		"default_popup": "html/views/layout.html"
	},
	"permissions": [
		"storage",
		"http://*/",
		"https://*/"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}