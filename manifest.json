{
  "manifest_version": 2,

  "name": "Torrent Observer",
  "description": "This extension alerts user when torrent file is found",
  "version": "0.0.1",

  "default_locale": "en",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index_popup.html"
  },
  "permissions": [
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/ObjTree.js", "main.js"]
    }
  ]
}
